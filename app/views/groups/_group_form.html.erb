<form class="form-horizontal" role="form" action="<%= @url %>" method="POST">
	<% if @url != groups_url %>
		<input type="hidden" name="_method" value="PUT"></input>
	<% end %>
	<div class="form-group">
		<label class="control-label" for="group_name">Name</label>
		<div>
			<input class="form-control" type="text" maxlength="15" name="group[name]" id="group_name" value="<%= @group.name %>" placeholder="What's your group's name?"></input>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label" for="group_description">Description</label>
		<div>
			<textarea class="form-control" name="group[description]" id="group_description" placeholder="How would you describe your group?"><%= @group.description %></textarea>
		</div>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-default">Submit</button>
	</div>
	<!-- this div holds each user's hidden input tag -->
	<div id="users_to_add"></div> 
</form>

